// VARS
$promise-label-width: 22%;

// GLOBAL
.emphasize {
  font-weight: bolder;
}

.underline {
  text-decoration: underline;
}
// END GLOBAL

.product-single__title {
  font-size: 1.65rem;
}

hr.devider {
  margin: 1rem 0;
  padding: 0;
}

h3.section__title {
  text-transform: uppercase;
}

.grid__item.product-single__description-container {
  padding: 0;
}

// Product Single Price
.product-single {
  .price__sale {
    font-size: 1.35rem;
  }
}

// Saved Notice
.product__price {
  .price {
    margin-bottom: 0.25rem;
  }

  .saved_notice {
    font-size: 0.85rem;
    background-color: #fff1f2;
    color: #fb0039;
    padding: 0.2rem 0.5rem;
    margin-bottom: 1rem;

    .emphasize {
      font-weight: 600;
    }
  }

  .loox-rating {
    font-size: 0.95rem;
  }
}

.product-card {
  .loox-rating {
    font-size: 0.90rem;
  }
}

// Promises
.promises-devider {
  margin: 0 0 1rem 0;
  padding: 0;
}

.promises-list {
  margin-bottom: 1.2rem;

  .promise {
    display: flex;
    padding: 0.25rem 0;

    .promise__label {
      width: $promise-label-width;
      min-width: 5.5rem;
      text-align: end;
    }

    .promise__content {
      padding-left: 0.6rem;
      width: (100% - $promise-label-width);

      #geo_location {
        font-style: italic;
      }

      .promise__content--sub-content {
        font-size: 0.8rem;
        color: #68717b;

        a {
          font-size: 0.8rem;
          color: #68717b;
        }
      }
    }

    &.return-policy {
      .details-link {
        font-size: 0.75rem;
        color: #555;
      }
    }
  }
}
